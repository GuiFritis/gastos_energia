@using PWA_Trabalho2B_GFritis_Williane.Models.Itens
@model PWA_Trabalho2B_GFritis_Williane.ViewModels.Itens.ItensIndexViewModel
@{
    ViewData["Title"] = "Itens";
}

<div class="text-center">
    <h1 class="display-4">Itens</h1>
    
    @if (Model.MsgErro != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <p>@Model.MsgErro</p>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    
    @if (Model.MsgSuccess != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <p>@Model.MsgSuccess</p>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <table class="table">
        <thead>
        <tr>
            <th class="text-center">Nome</th>
            <th class="text-center">Descrição</th>
            <th class="text-center">Categoria</th>
            <th class="text-center">Consumo (W)</th>
            <th class="text-center">Uso Diário (Hrs)</th>
            <th class="text-center">Data de Fabricação</th>
            <th><a class="text-success" asp-action="Cadastro" title="Novo">Novo <i class="icofont-plus"></i></a></th>
        </tr>
        </thead>
        <tbody>
        @foreach(ItensViewDTO item in Model.Itens){
            <tr>
                <td class="text-center">@item.Nome</td>
                <td class="text-center">@item.Descricao</td>
                @if (item.Categoria != null)
                {
                    <td class="text-center">@item.Categoria.Descricao</td>
                }
                else
                {
                    <td class="text-center"></td>
                }
                <td class="text-center">@item.ConsumoWatts</td>
                <td class="text-center">@item.HorasUsoDiario</td>
                <td class="text-center">@item.DataFabricacao</td>
                <td class="text-center">
                    <a class="text-primary pr-3" asp-action="Cadastro" asp-route-id="@item.Id" title="Editar"><i class="icofont-edit"></i></a>
                    <a class="text-danger" asp-action="Delete" asp-route-id="@item.Id" title="Deletar"><i class="icofont-ui-delete"></i></a>
                </td>
            </tr>
        }
            </tbody>
    </table>
    
</div>